# Database Configuration
DATABASE_URL=mysql+pymysql://mcpuser:mcppassword@db:3306/mcpdb?charset=utf8mb4

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
FLASK_APP=run.py
FLASK_ENV=development

# Session Configuration
